<%- include('../partials/header') %>

</head>

<body>
    <section class="register">
        <header>
            <nav class="navbar justify-content-center shadow-sm">
                <h1 class="brand">Study <span>Buddy</span></h1>
            </nav>
        </header>
        <main>
            <div class="container-fluid shadow">
                <h2 class="mb-5">Registrarse como Docente</h2>
                <form class="needs-validation" novalidate>

                    <!-- Tarjeta de Datos Personales -->

                    <div class="card">
                        <div class="card-header">
                            <h4><i class="fas fa-user"></i> Datos Personales</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="nombre">Nombres</label>
                                    <input type="text" class="form-control" id="nombre" name="names" placeholder="" value="" required>
                                    <div class="invalid-feedback">
                                        *Se requiere nombre(s) valido.
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="apellidos">Apellidos</label>
                                    <input type="text" class="form-control" id="apellidos" name="lastNames" placeholder="" value="" required>
                                    <div class="invalid-feedback">
                                        *Se requiere apellido(s) valido.
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="email">Correo Electronico</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="you@example.com" required>
                                <div class="invalid-feedback">
                                    Please enter a valid email address for shipping updates.
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-3">
                                    <label for="dob">Fecha de Nacimiento</label>
                                    <div class="datepicker date input-group">
                                        <input type="text" placeholder="Fecha" class="form-control" id="dob" name="dob" required>
                                        <div class="input-group-append calendar rounded-right"><span class="input-group-text rounded-right"><i class="fa fa-calendar"></i></span></div>
                                        <div class="invalid-feedback">*Se requiere fecha de nacimiento.</div>
                                    </div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="phone">Telefono</label>
                                    <input type="text" class="form-control" id="phone" placeholder="" value="" required>
                                    <div class="invalid-feedback">
                                        *Se requiere numero telefonico valido
                                    </div>
                                </div>
                                <div class="form-group col-md-3 mb-3">
                                    <label for="doc-type">Tipo de Documento</label>
                                    <select class="form-control" id="doc-type">
                                        <option>Seleccione...</option>
                                        <option>DNI</option>
                                        <option>Pasaport</option>
                                        <option>CE</option>
                                        <option>Otro</option>
                                    </select>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="doc-num">N° Docuemnto</label>
                                    <input type="text" class="form-control" id="doc-num" required>
                                    <div class="invalid-feedback">
                                        *Se requiere numero de Documento.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tarjeta de Experiencia Laboral -->

                    <div class="card">
                        <div class="card-header">
                            <h4><i class="fas fa-briefcase"></i> Experiencia Laboral</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="description">Detalle</label>
                                <textarea class="form-control" id="description" rows="6" name="details"></textarea>
                            </div>

                            <div class="mb-3">
                                <label for="resume">URL de LinkedIn o CV </label>
                                <input type="url" class="form-control" id="resume" name="resume" required>
                                <div class="invalid-feedback">
                                    Se require un URL.
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tarjeta de cursos -->

                    <div class="card">
                        <div class="card-header">
                            <h4><i class="fas fa-book"></i> Cursos</h4>
                        </div>
                        <div class="card-body course-card">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="materia-0">Materia</label>
                                            <input type="text" class="form-control" id="materia-0" name="materia-0" placeholder="" value="" required>
                                            <div class="invalid-feedback">
                                                *Se requiere nombre(s) valido.
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label for="title-0">Titulo</label>
                                            <input type="text" class="form-control" id="title-0" name="title-0" placeholder="" value="" required>
                                            <div class="invalid-feedback">
                                                *Se requiere apellido(s) valido.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                            <label for="price-0">Precio Aproximado</label>
                                            <div class="input-group mb-3 class-price">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">S/.</span>
                                                </div>
                                                <input id="price-0" type="text" class="form-control" aria-label="Cantidad en Soles">
                                                <div class="input-group-append">
                                                    <span class="input-group-text">/h</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="description-0">Detalle</label>
                                        <textarea class="form-control" id="description-0" rows="4" name="details-0"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-muted text-center">
                            <button id="add-course" class="btn btn-dark">Añadir Curso</button>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h4><i class="far fa-calendar-alt"></i> Disponibilidad</h4>
                        </div>
                        <div class="card-body">
                            <%- include('../partials/availability') %>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h4><i class="fas fa-lock"></i> Contraseña</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <input type="password" class="form-control" id="password" placeholder="Contraseña" required>
                                    <div class="invalid-feedback">
                                        *Se requiere contraseña.
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <input type="password" class="form-control" id="confirm-password" placeholder="Confirmar Contraseña" required>
                                    <div class="invalid-feedback">
                                        *Confirme Contraseña
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center">
                        <button class="btn btn-dark btn-lg register-btn" type="submit">Registrarse</button>
                    </div>
                </form>
            </div>
        </main>
        <footer>

        </footer>
    </section>
    <script src="/js/registerTeacher.js"></script>
    <%- include('../partials/footer') %>